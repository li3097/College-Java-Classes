                System.out.println("Business hours are: 8sm- 4pm");
                break;
            case THU:
                System.out.println("Business hours are: 9am - 5pm");
                break;
            case FRI:
                System.out.println("Business hours are: 10am - 6pm");
                break;
            case SAT:
                System.out.println("Business hours are 11am - 7pm");
                break;
            case SUN:
                System.out.println("Business hours are 1pm - 5pm");
                break;
                       
        }
        
        
